@model MyAcademyCarBook.EntityLayer.Concrete.Reference

@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Referans Güncelleme Sayfası</h3>
<form method="post">
    <input type="hidden" asp-for="ReferenceID" />
    <label>Ad Soyad </label>
    <input type="text" asp-for="AdSoyad" class="form-control" style="border:2px solid #2222" />
    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="Açıklama" class="form-control" style="border:2px solid #2222" />
    <br />
    <label>Resim</label>
    <input type="text" asp-for="Resim" class="form-control" style="border:2px solid #2222" />
    <br />



    <button class="btn btn-success">Referansı Güncelle</button>
</form>
