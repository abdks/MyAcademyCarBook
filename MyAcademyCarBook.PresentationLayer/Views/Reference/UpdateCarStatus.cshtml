@model MyAcademyCarBook.EntityLayer.Concrete.Reference
@{
    ViewData["Title"] = "UpdateReference";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Referans Güncelleme Sayfası</h1>

<form method="post">
    <label>Ad Soyad</label>
    <input type="text" asp-for="AdSoyad" class="form-control" style="border:2px solid #2222" />
