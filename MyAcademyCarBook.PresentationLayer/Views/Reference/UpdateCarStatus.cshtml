    <label>Açıklama</label>
    <input type="text" asp-for="Açıklama" class="form-control" style="border:2px solid #2222" />
    <br />
    <label>Resim</label>
    <input type="text" asp-for="Resim" class="form-control" style="border:2px solid #2222" />
    <br />
    <button class="btn btn-primary">Referans Güncelle</button>
</form>
