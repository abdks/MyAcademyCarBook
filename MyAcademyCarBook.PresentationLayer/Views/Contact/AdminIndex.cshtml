@model List<MyAcademyCarBook.EntityLayer.Concrete.Contact>

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>İletişim Sayfası</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Adres</th>
        <th>Telefon</th>
        <th>Mail</th>
        <th>Facebook</th>
        <th>İnstagram</th>
        <th>Twitter</th>
        <th>Linkedln</th>

        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ContactID</td>
            <td>@item.Adress</td>
            <td>@item.Tel</td>
            <td>@item.Mail</td>
            <td>@item.Facebook</td>
            <td>@item.Instagram</td>
            <td>@item.Twitter</td>
            <td>@item.Linkedln</td>
            <td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Contact/UpdateContact/@item.ContactID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/Contact/AddContact" class="btn btn-primary">Yeni İletişim Girişi</a>

