@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}


    <div class="site-section bg-light" id="contact-section">
      <div class="container">
        <div class="row justify-content-center text-center">
        <div class="col-7 text-center mb-5">
          <h2>Bize buradan kolaylıkla ulaşabilirsiniz.</h2>
          <p>Dilerseniz müşteri hizmetlerimizi arayarak hızlıca sorununuzu çözebilirsiniz</p>
        </div>
      </div>
        <div class="row">
          <div class="col-lg-8 mb-5" >
          
                <form action="@Url.Action("AddContactForm2", "Contact")" method="post">
                    <div class="form-group row">
                        <div class="col-md-6 mb-4 mb-lg-0">
                            <input type="text" class="form-control" placeholder="Adınız" name="Name">
                        </div>
                        <div class="col-md-6">
                            <input type="text" class="form-control" placeholder="Soyadınız" name="SurName">
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12">
                            <input type="text" class="form-control" placeholder="Mail Adresiniz" name="Mail">
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12">
                            <textarea name="Message" class="form-control" placeholder="Mesajınız" cols="30" rows="10"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6 mr-auto">
                            <input type="submit" class="btn btn-block btn-primary text-white py-3 px-5" value="Gönder">
                        </div>
                    </div>
                </form>

          </div>
            <div class="col-lg-4 ml-auto">
                <div class="p-3 p-md-5" style="background-color:#5D3EBC">
                    @foreach (var item in Model)
                    {
                        <h3 class="mb-4" style="color:white">İletişim Bilgilerimiz</h3>
                        <ul class="list-unstyled footer-link">
                            <li class="d-block mb-3">
                                <span class="d-block" style="color:white">Adres:</span>
                                <span style="color:white">@item.Adress</span>
                            </li>
                            <li class="d-block mb-3" style="color:white">
                                <span class="d-block" style="color:white">Telefon:</span>
                                <span style="color:white">@item.Tel</span>
                            </li>
                            <li class="d-block mb-3">
                                <span class="d-block" style="color:white">Email:</span>
                                <span style="color:white">@item.Mail</span>
                            </li>
                        </ul>
                    }
                </div>
            </div>

        </div>
      </div>
    </div>

