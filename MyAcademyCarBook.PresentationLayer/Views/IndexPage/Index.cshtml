@model MyAcademyCarBook.PresentationLayer.Controllers.IndexPageController.CombinedDataViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}


@await Component.InvokeAsync("_CarFilterComponentPartial")
<br />
<br />


        <div class="site-section bg-light">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3">
                        <h3>Our Offer</h3>
                        <p class="mb-4">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Iure nesciunt nemo vel earum maxime neque!</p>
                        <p>
                            <a href="#" class="btn btn-primary custom-prev">İleri</a>
                            <span class="mx-2">/</span>
                            <a href="#" class="btn btn-primary custom-next">Geri</a>
                        </p>
                    </div>
                    <div class="col-lg-9">




                        <div class="nonloop-block-13 owl-carousel">

                            @foreach (var item in Model.CarValues.TakeLast(5))
                    {
                       
                        <div class="item-1">
                            <a href="#"><img src="@item.ImageUrl" alt="Image" class="img-fluid"></a>
                            <div class="item-1-contents">
                                <div class="text-center">
                                    <h3><a href="#">@item.Brand @item.Model</a></h3>
                                    <div class="rating">
                                        <span class="icon-star text-warning"></span>
                                        <span class="icon-star text-warning"></span>
                                        <span class="icon-star text-warning"></span>
                                        <span class="icon-star text-warning"></span>
                                        <span class="icon-star text-warning"></span>
                                    </div>
                                    <div class="rent-price"><span>$250/</span>day</div>
                                </div>
                                <ul class="specs">
                                    <li>
                                        <span>Kapasite</span>
                                        <span class="spec">@item.PersonCount</span>
                                    </li>
                                    <li>
                                        <span>Km</span>
                                        <span class="spec">@item.Km</span>
                                    </li>
                                    <li>
                                        <span>Vites</span>
                                        <span class="spec">@item.GearType</span>
                                    </li>
                                    <li>
                                        <span>Year</span>
                                        <span class="spec">@item.Year</span>
                                    </li>
                                </ul>
                                <div class="d-flex action">
                                    <a href="contact.html" class="btn btn-primary">Kirala</a>
                                </div>
                            </div>
                        </div>
                    }
           


         

                        </div>

                    </div>
                </div>
            </div>
        </div>


<div class="site-section section-3" style="background-image: url('images/hero_2.jpg');">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="text-white">Hizmetlerimiz</h2>
            </div>
        </div>
        <div class="row">
              @foreach (var item in Model.EndServiceValues)
                {
                     <div class="col-lg-4">
                    <div class="service-1">
                        <span class="service-1-icon">
                            <span><img src="@item.ServiceImage" height="55px" width="55px"/></span>
                        </span>
                        <div class="service-1-contents">
                            <h3>@item.ServiceTitle</h3>
                            <p>@item.ServiceDescription</p>
                        </div>
                    </div>   
            </div>
            }
            </div>
            </div>
            </div>


@await Component.InvokeAsync("_IHowItWorksStepComponentPartial")

     


        <div class="site-section bg-light">
            <div class="container">
                <div class="row justify-content-center text-center mb-5">
                    <div class="col-7 text-center mb-5">
                        <h2>Customer Testimony</h2>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Nemo assumenda, dolorum necessitatibus eius earum voluptates sed!</p>
                    </div>
                </div>
                <div class="row">
                     @foreach (var item in Model.ReferenceValues)
                        {
                    <div class="col-lg-4 mb-4 mb-lg-0">
                        <div class="testimonial-2">
                            <blockquote class="mb-4">
                                <p>"@item.Açıklama"</p>
                            </blockquote>
                            <div class="d-flex v-card align-items-center">
                                <img src="@item.Resim" alt="Image" class="img-fluid mr-3">
                                <span>@item.AdSoyad</span>
                            </div>
                        </div>
                    </div>
             }

                </div>
            </div>
        </div>


