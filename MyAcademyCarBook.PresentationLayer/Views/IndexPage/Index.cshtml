@model MyAcademyCarBook.PresentationLayer.Controllers.IndexPageController.CombinedDataViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}


@await Component.InvokeAsync("_CarFilterComponentPartial")
<br />
<br />


<div class="site-section" style="background-color:#5D3EBC">
    <div class="container">
                <div class="row">
            <div class="col-lg-3" style="color: white;">
                <h3 style="color:white;">Son Eklenen Araçlarımız</h3>
                <p class="mb-4">Araç Filomuza her gün yeni araçlar eklemekteyiz. Son bir haftada filomuza eklediğimiz araçlar!</p>
                <p>
                    <a href="#" class="btn btn-primary custom-prev" style="color: white;background-color:#5D3EBC;">İleri</a>
                    <span class="mx-2" style="color: white;">/</span>
                    <a href="#" class="btn btn-primary custom-next" style="color: white;background-color:#5D3EBC;">Geri</a>
                </p>
            </div>

                    <div class="col-lg-9">




                        <div class="nonloop-block-13 owl-carousel">

                            @foreach (var item in Model.CarValues.TakeLast(5))
                    {

                        <div class="item-1">
                            <a href="#"><img src="@item.ImageUrl" alt="Image" class="img-fluid"></a>
                            <div class="item-1-contents">
                                <div class="text-center">
                                    <h3 style="color : #5D3EBC"><a href="#">@item.Brand @item.Model</a></h3>
                                    <div class="rating">
                                        <span class="icon-star text-warning"></span>
                                        <span class="icon-star text-warning"></span>
                                        <span class="icon-star text-warning"></span>
                                        <span class="icon-star text-warning"></span>
                                        <span class="icon-star text-warning"></span>
                                    </div>
                                </div>
                                <ul class="specs" style="color:#5D3EBC">
                                    <li>
                                        <span>Kapasite</span>
                                        <span class="spec">@item.PersonCount</span>
                                    </li>
                                    <li>
                                        <span>Km</span>
                                        <span class="spec">@item.Km</span>
                                    </li>
                                    <li>
                                        <span>Vites</span>
                                        <span class="spec">@item.GearType</span>
                                    </li>
                                    <li>
                                        <span>Year</span>
                                        <span class="spec">@item.Year</span>
                                    </li>
                                </ul>
                                <div class="d-flex action">
                                    <a href="/Car/CarDetail/@item.CarID" class="btn btn-danger" style="background-color:#5D3EBC;">Detaylar</a>
                                </div>
                            </div>
                        </div>
                    }
           


         

                        </div>

                    </div>
                </div>
            </div>
        </div>
@* <hr style="color: white; height: 2px; background-color: white; border: none;">
 *@
<div class="site-section" style="background-color:white;">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="text-white">M&Y Avantajları</h2>
            </div>
        </div>
        <div class="row">
              @foreach (var item in Model.EndServiceValues)
                {
                     <div class="col-lg-4">
                    <div class="service-1">
                        <span class="service-1-icon">
                            <span><img src="@item.ServiceImage"/></span>
                        </span>
                        <br>
                        <div class="service-1-contents">
                           <br>
                            <h3 style="color:#5D3EBC">@item.ServiceTitle</h3>
                            <p style="color: black">@item.ServiceDescription</p>
                        </div>
                    </div>   
            </div>
            }
            </div>
            </div>
            </div>

@await Component.InvokeAsync("_IHowItWorksStepComponentPartial")

 
<div class="site-section bg-light">
    <div class="container">
        <div class="row justify-content-center text-center mb-5">
            <div class="col-7 text-center mb-5">
                <h2 style="color:#5D3EBC">Referans Şirketler</h2>
                <p style="color:#5D3EBC">M&Y Araç aynı zamanda kurumsal şirketlere de araç hizmeti vermektedir.</p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.ReferenceValues)
            {
                <div class="col-lg-4 mb-4 mb-lg-0" style="border: 2px solid #fff; padding: 15px; background-color:#5D3EBC; color: white;">
                    <div class="testimonial-2" style="background-color:#5D3EBC;">
                        <blockquote class="mb-4">
                            <p>"@item.Açıklama"</p>
                        </blockquote>
                        <div class="d-flex v-card align-items-center">
                            <br>
                            <img src="@item.Resim" alt="Image" class="img-fluid mr-1" style="width: 50px; height: 50px;"> <!-- Örnek boyutlar, istediğiniz boyutları ayarlayabilirsiniz -->
                            <span>@item.AdSoyad</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
