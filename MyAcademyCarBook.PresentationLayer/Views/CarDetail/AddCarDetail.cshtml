@model CarDetails
@{
    ViewData["Title"] = "AddCarDetail";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<h3>Yeni Detay Girişi</h3>

<form method="post">
    <label>Araç</label>
    <input type="text" style="border:2px solid #2222" asp-for="CarID" class="form-control" />
    <br />
    <label>Yazar</label>
    <input type="text" style="border:2px solid #2222" asp-for="AppUserID" class="form-control" />
    <br />
    <label>Açıklama</label>
    <input type="text" style="border:2px solid #2222" asp-for="Description" class="form-control" />
    <br />
    <label>Oluşturulma Tarihi</label>
    <input type="text" style="border:2px solid #2222" asp-for="CreatedDate" class="form-control" />
    <br />
    <button class="btn btn-primary">Detayı Kaydet</button>




</form>