@model List<MyAcademyCarBook.EntityLayer.Concrete.CarStatus>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Araba Durum Listesi</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Araba Detayları</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.CarStatusID</td>
            <td>@x.CarStatusName</td>
            <td><a href="/CarStatus/RemoveCarStatus/@x.CarStatusID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/CarStatus/UpdateCarStatus/@x.CarStatusID" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="#" class="btn btn-outline-warning">Detaylar</a></td>
        </tr>
    }
 
</table>
<a href="/CarStatus/CreateCarStatus" class="btn btnbtn-outline-primary">Yeni Araba Durum Girişi</a>
