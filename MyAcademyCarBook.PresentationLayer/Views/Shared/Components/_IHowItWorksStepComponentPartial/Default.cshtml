@model List<HowItWorkStep>
@{
    int i = 0;
}

<div class="site-section" style="background-color:#5D3EBC">
    <div class="row justify-content-center text-center">
        <div class="col-7 text-center mb-5">
            <h2 style="color:white">Sistem Nasıl Çalışır</h2>
            <p style="color:white">Hemen birkaç adımda istediğin arabayı istediğin lokasyonda kirala</p>
        </div>
    </div>
    <div class="how-it-works d-flex">
        @foreach (var item in Model)
        {
            i++;
            <div class="step">
                <span class="number" style="color:white"><span>@string.Format("0{0}", i)</span></span>
                <span class="caption" style="color: white">@item.Description</span>
            </div>

        }
    

    </div>
</div>

