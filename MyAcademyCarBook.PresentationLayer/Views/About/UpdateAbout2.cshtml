@model MyAcademyCarBook.EntityLayer.Concrete.About

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Hakkında Güncelleme Sayfası</h3>
<form method="post">
    <input type="hidden" asp-for="AboutID" />
    <label>Açıklama </label>
    <input type="text" asp-for="AboutDescription" class="form-control" style="border:2px solid #2222" />
    <br />
    <label>Tarihçe</label>
    <input type="text" asp-for="AboutHistory" class="form-control" style="border:2px solid #2222" />
    <br />
    <label>Açıklama Resimi</label>
    <input type="text" asp-for="AboutImageOne" class="form-control" style="border:2px solid #2222" />
    <br />
    <label>Tarihçe Resimi</label>
    <input type="text" asp-for="AboutImageTwo" class="form-control" style="border:2px solid #2222" />
    <br />
 


    <button class="btn btn-success">Hakkında Güncelle</button>
</form>
