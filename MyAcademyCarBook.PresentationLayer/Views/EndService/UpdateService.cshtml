@model MyAcademyCarBook.EntityLayer.Concrete.EndService

@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Hizmet Güncelleme Sayfası</h3>
<form method="post">
    <input type="hidden" asp-for="EndServiceID" />
    <label>Hizmet Başlığı</label>
    <input type="text" asp-for="ServiceTitle" class="form-control" style="border:2px solid #2222" />
    <br />
    <label>Hizmet Açıklaması</label>
    <input type="text" asp-for="ServiceDescription" class="form-control" style="border:2px solid #2222" />
    <br />
    <label>Hizmet Resimi</label>
    <input type="text" asp-for="ServiceImage" class="form-control" style="border:2px solid #2222" />
    <br />

    <button class="btn btn-success">Servisi Güncelle</button>
</form>
